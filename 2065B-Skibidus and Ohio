#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        string s;
        cin>>s;
        int n=s.size();
        bool k=true;
        for(int i=0;i<s.size()-1;i++)
        {
            if(s[i]==s[i+1])
            {
                k=false;
                break;
            }
        }
        if(!k)
        {
            cout<<1<<endl;
        }
        else{
            cout<<n<<endl;
        }

    }
}
